{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"configMigration": true,
	"extends": ["config:recommended", "docker:pinDigests", "helpers:pinGitHubActionDigests", ":pinDevDependencies"],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"autoApprove": true,
	"labels": ["Dependencies", "Renovate"],
	"packageRules": [
		{
			"matchDepTypes": ["optionalDependencies"],
			"addLabels": ["Dependencies: Optional"]
		},
		{
			"matchDepTypes": ["devDependencies"],
			"addLabels": ["Dependencies: Development"]
		},
		{
			"matchDepTypes": ["dependencies"],
			"addLabels": ["Dependencies: Production"]
		},
		{
			"description": "Automerge non-major updates",
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		},
		{
			"matchPaths": ["vscode/*"],
			"ignoreDeps": ["@types/node"]
		},
		{
			"matchPaths": ["packages/**/*"],
			"ignoreDeps": ["default-markuplint", "test-markuplint"]
		},
		{
			"matchPaths": ["package.json"],
			"ignoreDeps": ["string-width", "strip-ansi", "wrap-ansi"]
		}
	]
}
