{
	"private": true,
	"scripts": {
		"build": "tsc -b",
		"dev": "yarn build -w",
		"clean": "rimraf 'packages/**/{lib,*.tsbuildinfo}'",
		"test": "jest --coverage",
		"test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
		"test:clear": "jest --clearCache",
		"test:unit": "jest",
		"test:heapdump": "node --expose-gc ./heaptest/index.js",
		"lint": "prettier --write .; eslint . --fix; yarn cli './website/**/*.tsx'",
		"schema": "yarn workspace @markuplint/ml-spec schema",
		"gen": "yarn workspace @markuplint/html-spec gen",
		"all": "yarn clean; yarn build; yarn lint; yarn gen; yarn schema; yarn test:clear; yarn test",
		"cli": "./packages/markuplint/bin/markuplint",
		"site:dev": "yarn workspace @markuplint/website dev",
		"site:build": "yarn workspace @markuplint/website build",
		"pg:dev": "yarn workspace @markuplint/playground dev",
		"pg:build": "yarn workspace @markuplint/playground build",
		"apidoc": "typedoc",
		"release": "lerna publish",
		"prerelease": "yarn build; yarn test",
		"prepare": "husky install && yarn-deduplicate --strategy fewer || exit 0"
	},
	"lint-staged": {
		"./{packages,website,playground}/**/*.{ts,tsx,json}": [
			"prettier --write"
		],
		"./{packages,website,playground}/**/*.{ts,tsx}": [
			"eslint --fix"
		],
		"./test/**/*.{pug,html}": [
			"yarn cli"
		]
	},
	"workspaces": [
		"packages/*",
		"packages/@markuplint/*",
		"website",
		"playground"
	],
	"devDependencies": {
		"@types/cheerio": "^0.22.29",
		"@types/cli-color": "^2.0.0",
		"@types/cli-progress": "^3.9.0",
		"@types/cosmiconfig": "^6.0.0",
		"@types/glob": "^7.1.3",
		"@types/has-yarn": "^1.0.1",
		"@types/jest": "^26.0.23",
		"@types/mdx-js__react": "^1.5.3",
		"@types/meow": "^6.0.0",
		"@types/mini-css-extract-plugin": "^1.4.3",
		"@types/node": "^15.12.5",
		"@types/node-fetch": "^2.5.8",
		"@types/parse5": "^6.0.0",
		"@types/react": "^17.0.11",
		"@types/script-ext-html-webpack-plugin": "^2.1.1",
		"@types/uuid": "^8.3.0",
