		"autoprefixer": "^10.2.6",
		"babel-loader": "^8.2.2",
		"browser-resolve": "^2.0.0",
		"cheerio": "^1.0.0-rc.10",
		"cli-progress": "^3.9.0",
		"coveralls": "^3.1.0",
		"css-loader": "^5.2.6",
		"cssnano": "^5.0.6",
		"eslint": "^7.29.0",
		"eslint-config-next": "^11.0.1",
		"eslint-plugin-eslint-comments": "^3.2.0",
