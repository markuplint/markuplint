{
	"name": "markuplint-packages",
	"private": true,
	"type": "module",
	"scripts": {
		"all": "run-s up lint clean build test site:up",
		"build": "lerna run build",
		"clean": "lerna run clean",
		"dev": "lerna run --parallel dev",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:heapdump": "node --expose-gc ./heaptest/index.js",
		"lint": "run-p lint:eslint lint:prettier lint:spellcheck lint:github-actions",
		"lint:eslint": "npx eslint --fix \"./{packages,vscode}/**/*.{ts,mjs,cjs,spec.js}\"",
		"lint:prettier": "npx prettier --write \"./{packages,vscode}/**/*.{ts,tsx,js,cjs,mjs,json,rc,md}\" --log-level warn",
		"lint:spellcheck": "cspell --no-progress --show-suggestions \"**\"",
		"lint:github-actions": "actionlint .github/workflows/*.yml",
		"lint-check": "run-p lint-check:eslint lint-check:prettier lint:spellcheck",
		"lint-check:eslint": "npx eslint \"./{packages,vscode}/**/*.{ts,mjs,cjs,spec.js}\"",
		"lint-check:prettier": "npx prettier --check \"./{packages,vscode}/**/*.{ts,tsx,js,cjs,mjs,json,rc,md}\" --log-level warn",
		"up": "run-s up:deps up:gen up:schema",
		"up:deps": "npx npm-check-updates --interactive --workspaces --format group",
		"up:gen": "cd packages/\\@markuplint/html-spec/; yarn run gen;",
		"up:schema": "lerna run schema",
		"release": "lerna publish --exact --conventional-commits --conventional-graduate",
		"release:next": "lerna publish --dist-tag next --exact --force-publish --conventional-commits --conventional-prerelease --preid alpha",
		"release:canary": "lerna publish --preid dev --canary --exact --force-publish",
		"prerelease": "run-s build test",
		"check:build": "find . -type f -name \"*.d.ts\" -print | xargs grep \"packages/@markuplint\"",
		"vscode:dev": "cd vscode; yarn install; yarn run vscode:dev",
		"vscode:login": "cd vscode; yarn run vscode:login",
		"vscode:package": "node vscode/scripts/install.mjs",
		"vscode:release": "node vscode/scripts/install.mjs release",
		"site:dev": "cd website; yarn install; yarn run site:start",
		"site:lint": "cd website; yarn install; yarn run site:lint",
		"site:build": "cd website; yarn install; yarn run site:build",
		"site:up": "cd website; yarn install; yarn run site:up",
		"apidoc": "typedoc --options ./typedoc.json",
		"prepare": "husky",
		"cli": "npx markuplint",
		"create-rule": "npx @markuplint/create-rule",
		"commit": "cz",
		"co": "cz"
	},
	"lint-staged": {
		"./{{packages,website,vscode}/**/*,*}.{ts,tsx,js,cjs,mjs,json,md}": [
			"prettier --write"
		],
		"./{packages,website,vscode}/**/*.{ts,mjs,cjs,spec.js}": [
			"eslint --fix"
		],
		"./test/**/*.{pug,html}": [
			"yarn run cli"
		],
		".github/workflows/*.yml": [
			"actionlint"
		],
		"**": [
			"cspell --no-must-find-files --no-progress --show-suggestions"
		]
	},
	"workspaces": [
		"packages/*",
		"packages/@markuplint/*",
		"packages/@markuplint-dev/*",
		"packages/@markuplint-test/*",
		"vscode"
	],
	"devDependencies": {
		"@commitlint/cli": "19.8.0",
		"@commitlint/config-conventional": "19.8.0",
		"@commitlint/config-lerna-scopes": "19.7.0",
		"commitizen": "4.3.1",
		"cspell": "8.19.2",
		"cz-conventional-changelog": "3.3.0",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "5.2.0",
		"heapdump": "0.3.15",
		"husky": "9.1.7",
		"lerna": "8.2.2",
		"lint-staged": "15.5.1",
		"npm-run-all2": "7.0.2",
		"textlint": "14.6.0",
		"textlint-filter-rule-comments": "1.2.2",
		"textlint-rule-preset-ja-spacing": "2.4.3",
		"textlint-rule-preset-ja-technical-writing": "12.0.2",
		"textlint-rule-preset-japanese": "10.0.4",
		"textlint-rule-preset-jtf-style": "3.0.2",
		"ts-node": "10.9.2",
		"tsx": "4.19.3",
		"typedoc": "0.28.3",
		"typedoc-plugin-mdn-links": "5.0.1",
		"typedoc-plugin-resolve-crossmodule-references": "0.3.3",
		"typescript": "5.8.3",
		"vitest": "3.0.6"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"packageManager": "yarn@4.9.2",
	"volta": {
		"node": "22.15.0"
	},
	"resolutions": {
		"markuplint": "workspace:*"
	}
}
