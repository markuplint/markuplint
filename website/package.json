{
  "name": "@markuplint/website",
  "description": "https://markuplint.dev",
  "version": "4.0.0",
  "private": true,
  "scripts": {
    "site:start": "yarn site:prebuild; docusaurus start",
    "site:build": "yarn site:prebuild; docusaurus build",
    "site:prebuild": "tsx scripts/prebuild/index.mts; npx prettier --write './src/**/*{ts,tsx,json,rc,md,mdx,css,scss}';",
    "presite:lint": "npx @markuplint/pretenders \"./src/**/*.tsx\" --out \"./pretenders.json\"",
    "site:lint": "run-p site:lint:*",
    "site:lint:prettier": "prettier --write './**/*{js,ts,tsx,mdx}' './*{json,rc,js}' '!./build/**/*' '!./.docusaurus/**/*'",
    "site:lint:eslint": "eslint --fix './{community,docs,i18n,scripts,src}/**/*.{js,ts,tsx}' './*.{js,ts}'",
    "site:lint:stylelint": "stylelint './src/**/*.css'",
    "site:lint:textlint": "textlint --fix './website/i18n/ja'",
    "site:lint:markuplint": "cd ../; yarn cli './website/**/*.tsx'",
    "site:up": "yarn upgrade-interactive --latest"
  },
  "author": "Yusuke Hirao",
  "license": "MIT",
  "dependencies": {
    "@docusaurus/core": "3.4.0",
    "@docusaurus/plugin-client-redirects": "3.4.0",
    "@docusaurus/preset-classic": "3.4.0",
    "@docusaurus/remark-plugin-npm2yarn": "3.4.0",
    "@docusaurus/theme-common": "3.4.0",
    "@octokit/rest": "21.0.2",
    "clsx": "2.1.1",
    "dotenv": "16.4.5",
    "gray-matter": "4.0.3",
    "prism-react-renderer": "2.3.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.4.0",
    "@docusaurus/tsconfig": "3.4.0",
    "@imgix/js-core": "3.8.0",
    "@tsconfig/strictest": "2.0.5",
    "@types/glob": "8.1.0",
    "eslint": "9.9.0",
    "prettier": "3.3.3",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "stylelint": "16.8.2",
    "stylelint-config-recess-order": "5.0.1",
    "stylelint-config-standard": "36.0.1",
    "stylelint-order": "6.0.4",
    "tsx": "4.17.0",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  }
}
