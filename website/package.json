{
  "name": "@markuplint/website",
  "description": "https://markuplint.dev",
  "version": "2.6.0",
  "private": true,
  "scripts": {
    "site:start": "yarn site:prebuild; docusaurus start",
    "site:build": "yarn site:prebuild; docusaurus build",
    "site:prebuild": "node scripts/prebuild/index.mjs; npx prettier --write './src/**/*{ts,tsx,json,rc,md,mdx,css,scss}';",
    "site:lint": "run-p site:lint:*",
    "site:lint:prettier": "prettier --check './**/*{js,ts,tsx,mdx}' './*{json,rc,js}' --ignore-path .gitignore",
    "site:lint:eslint": "eslint . --ext js,ts,jsx,tsx --ignore-path .gitignore",
    "site:lint:stylelint": "stylelint './**/*.css' --ignore-path .gitignore",
    "site:lint:cspell": "cspell '**' --no-progress",
    "site:lint:textlint": "textlint './i18n/ja'",
    "site:lint:markuplint": "markuplint '**/*.tsx'",
    "site:screenshot": "playwright test tests/screenshot.spec.ts",
    "site:up": "yarn upgrade-interactive --latest"
  },
  "author": "Yusuke Hirao",
  "license": "MIT",
  "dependencies": {
    "@docusaurus/core": "^3.1.1",
    "@docusaurus/plugin-client-redirects": "^3.1.1",
    "@docusaurus/preset-classic": "^3.1.1",
    "@docusaurus/remark-plugin-npm2yarn": "^3.1.1",
    "@markuplint/rules": "^4.0.0-alpha.9",
    "@mdx-js/react": "3.0.0",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.1",
    "gray-matter": "^4.0.3",
    "prism-react-renderer": "^2.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^3.1.1",
    "@docusaurus/tsconfig": "^3.1.1",
    "@imgix/js-core": "^3.8.0",
    "@markuplint/jsx-parser": "^4.0.0-alpha.9",
    "@markuplint/react-spec": "^4.0.0-alpha.9",
    "@playwright/test": "^1.41.1",
    "@tsconfig/docusaurus": "^2.0.1",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "markuplint": "^4.0.0-alpha.9",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.1",
    "stylelint": "^16.2.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "textlint": "^13.4.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
